link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Baloo+2&display=swap')
.navbar.navbar-light.fixed-top.navbar-expand-lg.bg-light
  .container
    a.navbar-brand(href='/')
      i.fas.fa-chess-rook
      | Livets Marathon
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Register') ? 'active' : undefined)
          a.nav-link(href='/registermatch') Registrera Match
        li.nav-item(class=(title === 'Statistik') ? 'active' : undefined)
          a.nav-link(href='/stats') Statistik
        li.nav-item(class=(title === 'Admin') ? 'active' : undefined)
          a.nav-link(href='/registergame') Admin
          ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Logga in
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Skapa konto
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.username || user.id
              i.caret
            div.dropdown-menu
              a.dropdown-item(href='/account') Mitt konto
              div.dropdown-divider
              a.dropdown-item(href='/logout') Logga ut
